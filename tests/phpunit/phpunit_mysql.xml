<phpunit
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
		codecoverage="true"
		haltonfailure="true"
		haltonerror="true">
	<testsuites>
		<testsuite name="core_libs">
			<file>tests/phpunit/core/helper/UtilsTest.php</file>
			<file>tests/phpunit/core/lib/AConfigTest.php</file>
		</testsuite>
	</testsuites>
	<filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>./</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-xml" target="./logs/clover.xml"/>
    </logging>
</phpunit>